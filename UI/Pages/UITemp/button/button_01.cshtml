@using (Html.Section())
{
    <style type="text/css">
        .button_01{
            position:relative;
            transition: all 400ms;
        }
        .button_01::after{content:"";position:absolute;left:0;top:0;z-index:-1; height:100%;width:0;background-color: #F9253B;border-color: #F9253B;transition:all 400ms;}
        .button_01:hover{color:#fff;}
        .button_01:hover::after{width:100%;}
        .button_01-icon::before{transform:translateX(0.5rem);transition: all 300ms;}
        .button_01:hover .button_01-icon::before{transform:none;}
    </style>
}
<a href="@Model.Url" class="border-1 border-ccc plr-8 ptb-3 font-bold inline-block button_01" target="@Model.Target">@Model.Name<i class="icon-right ml-5 button_01-icon"></i></a>
