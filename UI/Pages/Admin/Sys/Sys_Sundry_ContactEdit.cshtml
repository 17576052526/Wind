@page "{handler:?}"
@model Sys_Sundry_ContactEditModel
@{
    Layout = "_Layout_Edit";
}

<div class="box h-100">
    <div class="box-head">@Request.Query["navName"]</div>
    <div class="box-body">
        <form method="post" id="form">
            <input type="hidden" value="@Request.Query["typeID"]" name="Model.TypeID" />
            @Html.HiddenFor(s=>s.Model.ID)
            <div class="form-row">
                <label class="form-item">
                    <span>电话</span>
                    @Html.TextBoxFor(s => s.Model.Temp1, new { @class = "input-text" })
                </label>
                <label class="form-item">
                    <span>邮箱</span>
                    @Html.TextBoxFor(s => s.Model.Temp2, new { @class = "input-text" })
                </label>
                <label class="form-item">
                    <span>微信</span>
                    <span>
                        <input type="button" value="图片上传" class="upload-img btn-success" url="/common/upload" hidden-name="Model.Img" multiple="multiple" data="@(Model.Model!=null?@Model.Model.Img:"")" />
                    </span>
                </label>
                <label class="form-item">
                    <span>QQ</span>
                    @Html.TextBoxFor(s => s.Model.Temp3, new { @class = "input-text" })
                </label>
                <label class="form-item">
                    <span>地址</span>
                    @Html.TextBoxFor(s => s.Model.Temp4, new { @class = "input-text" })
                </label>
            </div>
        </form>
    </div>
    <div class="box-foot">
        <input type="button" class="btn-primary mlr-10" value="提交" onclick="$('#form').submit()" />
        <input type="button" class="btn-default mlr-10" value="取消" onclick="history.go(-1);" />
    </div>
</div>